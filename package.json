    "spotify-web-api-js": "^1.5.1",
    "typescript": "^4.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --coverageDirectory='results/' --watchAll=false",
