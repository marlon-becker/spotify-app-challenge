    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/__tests__/*.{ts,tsx}"
    ],
    "testMatch": [
      "**/*.(spec).{ts,tsx}"
    ]
  }
